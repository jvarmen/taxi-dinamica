@model CeroFilas.Web.ViewModels.Cities.CityInputModel
@{
    this.ViewData["Title"] = "Añadir Ciudad";
}

<div class="col-lg-6">
    <h2>Añadir Nueva Ciudad</h2>
    <form method="post" enctype="multipart/form-data" class="pt-4">
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">MNombre</label>
            <div class="col-sm-8">
                <input type="text" asp-for="@Model.Name" class="form-control" required="required">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6 text-right">
                <button type="submit" class="btn btn-success"
                        asp-area="Administration" asp-controller="Cities" asp-action="AddCity">
                    Añadir Ciudad
                </button>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-danger" asp-area="Administration" asp-controller="Cities" asp-action="Index">Cancelar</a>
            </div>
        </div>
    </form>
</div>
