@model TaxiDinamica.Web.ViewModels.Appointments.AppointmentViewModel
@{
    this.ViewData["Title"] = "Cancelar Cita";
}

<h3><strong>¿Estás seguro que deseas cancelar esta cita?</strong></h3>
<form class="col-6 mt-5">
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Fecha y Hora</label>
        <div class="col-sm-7">
            <div class="form-control">@Model.DateTime</div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">@Html.DisplayNameFor(Model => Model.PartnerPlaca)</label>
        <div class="col-sm-7">
            <div class="form-control">@Model.PartnerPlaca</div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">@Html.DisplayNameFor(Model => Model.PartnerDriverName)</label>
        <div class="col-sm-7">
            <div class="form-control">@Model.PartnerDriverName</div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">@Html.DisplayNameFor(Model => Model.AddressStart)</label>
        <div class="col-sm-7">
            <div class="form-control">@Model.AddressStart</div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">@Html.DisplayNameFor(Model => Model.AddressEnd)</label>
        <div class="col-sm-7">
            <div class="form-control">@Model.AddressEnd</div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Servicio</label>
        <div class="col-sm-7">
            <div class="form-control">@Model.ServiceName</div>
        </div>
    </div>
</form>

<div class="col-6 mt-5 ml-5">
    <div class="row ml-5">
        <form method="post">
            <button type="submit" class="btn btn-outline-success"
                    asp-area="" asp-controller="Appointments" asp-action="DeleteAppointment" asp-route-id="@Model.Id">
                Si, Cancelar!
            </button>
        </form>
        <div class="ml-5">
            <a class="btn btn-danger" asp-area="" asp-controller="Appointments" asp-action="Index">No! Volver atrás</a>
        </div>
    </div>
</div>
