@model TaxiDinamica.Web.ViewModels.Appointments.AppointmentViewModel
@{
    this.ViewData["Title"] = "Default";
}

<div class="col-md-6 col-12 mb-5">
    <div class="mb-5">
        <h3><strong>Informaci√≥n de la cita</strong></h3>
    </div>
    <div class="form-group row">
        <label class="col-md-5 col-sm-12 col-form-label">Fecha y Hora</label>
        <div class="col-md-7 col-sm-12">
            <div class="form-control">@this.Model.DateTime.ToString("f", new System.Globalization.CultureInfo("es-CO"))
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-5 col-sm-12 col-form-label">Cliente</label>
        <div class="col-md-7 col-sm-12">
            <div class="form-control">@this.Model.UserEmail</div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-5 col-sm-12 col-form-label">Servicio</label>
        <div class="col-md-7 col-sm-12">
            <div class="form-control">@this.Model.ServiceName</div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-5 col-sm-12 col-form-label">@Html.DisplayNameFor(Model => Model.AddressStart)</label>
        <div class="col-md-7 col-sm-12">
            <div class="form-control">@this.Model.AddressStart</div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-5 col-sm-12 col-form-label">@Html.DisplayNameFor(Model => Model.AddressEnd)</label>
        <div class="col-md-7 col-sm-12">
            <div class="form-control">@this.Model.AddressEnd</div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-5 col-sm-12 col-form-label">@Html.DisplayNameFor(Model => Model.Price)</label>
        <div class="col-md-7 col-sm-12">
            <div class="form-control">@this.Model.Price</div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-5 col-sm-12 col-form-label">@Html.DisplayNameFor(Model => Model.Comment)</label>
        <div class="col-md-7 col-sm-12">
            <div class="form-control">@this.Model.Comment</div>
        </div>
    </div>
